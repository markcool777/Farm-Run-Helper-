        farmLocations.put("Herb Run", new WorldPoint[]{
                new WorldPoint(2813, 3463, 0), // Falador
                new WorldPoint(3056, 3311, 0), // Ardougne
                new WorldPoint(3597, 3523, 0), // Catherby
                new WorldPoint(2935, 3225, 0), // Morytania
                // Add additional herb patches as needed
        });

        farmLocations.put("Tree Run", new WorldPoint[]{
                new WorldPoint(3183, 3233, 0), // Lumbridge
                new WorldPoint(2446, 3183, 0), // Taverley
                new WorldPoint(2461, 3404, 0), // Falador Park
                new WorldPoint(3344, 3469, 0), // Tree Gnome Stronghold
                new WorldPoint(2457, 3229, 0), // Varrock Castle
                // Add additional tree patches as needed
        });

        farmLocations.put("Hardwood Run", new WorldPoint[]{
                new WorldPoint(3702, 3826, 0), // Hardwood Grove
                // Add additional hardwood tree patches as needed
        });
    }


