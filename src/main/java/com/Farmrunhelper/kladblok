    @Override
        public Dimension render(Graphics2D graphics) {
            if (!plugin.isOverlayVisible()) {
                return null; // If the overlay is not visible, do not render
            }

            // Get current run type and locations
            String currentRunType = plugin.getCurrentRunType();
            WorldPoint[] locations = plugin.getFarmLocations().get(currentRunType);
            String firstStep = (locations != null && locations.length > 0) ? "Go to: " + locations[0].toString() : "N/A";
            String[] overlayText = {
                    "Run: " + currentRunType,
                    "First Step: " + firstStep
            };

            // Get the draggable box bounds
            Rectangle bounds = getBounds();
            if (bounds == null) {
                return null; // No bounds means no rendering
            }

            // Get position and dimensions from draggable bounds
            int boxX = bounds.x;
            int boxY = bounds.y;
            int boxWidth = 200; // Example fixed width
            FontMetrics metrics = graphics.getFontMetrics();
            int lineHeight = metrics.getHeight();
            int boxHeight = lineHeight * overlayText.length + 10; // Calculate height dynamically

            // Draw semi-transparent background
            graphics.setColor(new Color(0, 0, 0, 150)); // Semi-transparent black
            graphics.fillRect(boxX, boxY, boxWidth, boxHeight);

            // Draw border
            graphics.setColor(Color.WHITE);
            graphics.drawRect(boxX, boxY, boxWidth, boxHeight);

            // Draw each line of text
            int textY = boxY + lineHeight; // Start at the top of the box
            for (String line : overlayText) {
                int textX = boxX + (boxWidth - metrics.stringWidth(line)) / 2; // Center each line
                graphics.drawString(line, textX, textY);
                textY += lineHeight; // Move to the next line
            }

            // Return the box dimensions
            return new Dimension(boxWidth, boxHeight);
        }